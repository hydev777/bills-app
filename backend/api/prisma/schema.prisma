// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users    User[]
  bills    Bill[]
  items    Item[]
  itemCategories ItemCategory[]
  branches Branch[]

  @@map("organizations")
}

model User {
  id             Int      @id @default(autoincrement())
  organizationId Int      @map("organization_id")
  username       String   @db.VarChar(50)
  email          String   @db.VarChar(100)
  passwordHash   String   @map("password_hash") @db.VarChar(255)
  role           String   @default("user") @db.VarChar(50)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  bills          Bill[]
  userBranches   UserBranch[]
  userPrivileges UserPrivilege[]
  grantedPrivileges UserPrivilege[] @relation("PrivilegeGranter")

  @@unique([organizationId, email])
  @@unique([organizationId, username])
  @@index([organizationId])
  @@map("users")
}

model Bill {
  id             Int      @id @default(autoincrement())
  publicId       String   @unique @default(uuid()) @map("public_id") @db.Uuid
  organizationId Int      @map("organization_id")
  userId         Int      @map("user_id")
  title          String   @db.VarChar(100)
  description    String?
  amount         Decimal  @db.Decimal(10, 2)
  status         String   @default("draft") @db.VarChar(20)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  billItems    BillItem[]

  @@index([organizationId])
  @@index([userId])
  @@map("bills")
}

model ItemCategory {
  id             Int      @id @default(autoincrement())
  organizationId Int      @map("organization_id")
  name           String   @db.VarChar(50)
  description    String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  items        Item[]

  @@unique([organizationId, name])
  @@index([organizationId])
  @@map("item_categories")
}

model ItbisRate {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(50)
  percentage Decimal  @db.Decimal(5, 2)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  items Item[]

  @@unique([percentage])
  @@map("itbis_rates")
}

model Item {
  id             Int      @id @default(autoincrement())
  organizationId Int      @map("organization_id")
  name           String   @db.VarChar(100)
  description    String?
  unitPrice      Decimal  @map("unit_price") @db.Decimal(10, 2)
  categoryId     Int?     @map("category_id")
  itbisRateId    Int      @map("itbis_rate_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  category     ItemCategory?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  itbisRate    ItbisRate      @relation(fields: [itbisRateId], references: [id], onDelete: Restrict)
  billItems    BillItem[]

  @@index([organizationId])
  @@index([categoryId])
  @@index([itbisRateId])
  @@map("items")
}

model BillItem {
  id         Int      @id @default(autoincrement())
  billId     Int      @map("bill_id")
  itemId     Int      @map("item_id")
  quantity   Int      @default(1)
  unitPrice  Decimal  @map("unit_price") @db.Decimal(10, 2)
  totalPrice Decimal  @map("total_price") @db.Decimal(10, 2)
  notes      String?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  bill Bill @relation(fields: [billId], references: [id], onDelete: Cascade)
  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([billId, itemId])
  @@index([billId])
  @@index([itemId])
  @@map("bill_details")
}

model Branch {
  id             Int      @id @default(autoincrement())
  organizationId Int      @map("organization_id")
  name           String   @db.VarChar(100)
  code           String   @db.VarChar(20)
  address        String?
  phone          String?  @db.VarChar(20)
  email          String?  @db.VarChar(100)
  isActive       Boolean  @default(true) @map("is_active")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization  Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userBranches  UserBranch[]

  @@unique([organizationId, code])
  @@index([organizationId])
  @@index([isActive])
  @@map("branches")
}

model UserBranch {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  branchId  Int      @map("branch_id")
  isPrimary Boolean  @default(false) @map("is_primary")
  canLogin  Boolean  @default(true) @map("can_login")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([userId, branchId])
  @@index([userId])
  @@index([branchId])
  @@index([canLogin])
  @@index([isPrimary])
  @@map("user_branches")
}

model Privilege {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(50)
  description String?  @db.VarChar(255)
  resource    String   @db.VarChar(50)
  action      String   @db.VarChar(50)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  userPrivileges UserPrivilege[]

  @@unique([resource, action])
  @@index([resource])
  @@index([action])
  @@index([isActive])
  @@map("privileges")
}

model UserPrivilege {
  id          Int       @id @default(autoincrement())
  userId      Int       @map("user_id")
  privilegeId Int       @map("privilege_id")
  grantedBy   Int?      @map("granted_by")
  grantedAt   DateTime  @default(now()) @map("granted_at")
  expiresAt   DateTime? @map("expires_at")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  privilege Privilege @relation(fields: [privilegeId], references: [id], onDelete: Cascade)
  granter   User?     @relation("PrivilegeGranter", fields: [grantedBy], references: [id], onDelete: SetNull)

  @@unique([userId, privilegeId])
  @@index([userId])
  @@index([privilegeId])
  @@index([isActive])
  @@index([expiresAt])
  @@map("user_privileges")
}
